  "version": "0.2.0",
  "configurations": [

    {
      "type": "node",
      "request": "launch",
      "name": "调试 Nest.js 应用",
      "runtimeExecutable": "yarn",
      "runtimeArgs": [
        "workspace",
        "@wect/api",
        "start:dev"
      ],
      "cwd": "${workspaceFolder}/apps/api",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outFiles": [
        "${workspaceFolder}/apps/api/dist/**/*.js"
      ],
      "console": "integratedTerminal",
      "sourceMaps": true,
      "restart": true
    }
  ]
}