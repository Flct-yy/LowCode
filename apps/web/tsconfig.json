{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@type/*": ["src/type/*"],
      "@context/*": ["src/context/*"],
      "@components/*": ["src/components/*"],
      "@scss/*": ["src/scss/*"],
      "@pages/*": ["src/pages/*"],
      "@router/*": ["src/router/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src", "api/pageApi.ts", "api/api.ts"]
}